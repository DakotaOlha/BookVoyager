<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="89dp"
        android:paddingStart="14dp"
        android:paddingEnd="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/text_reward_bg"
        >

        <ImageView
            android:id="@+id/RewardImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_awards" />

        <TextView
            android:id="@+id/RewardText"
            android:layout_width="232dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="books from 10 different countries were read"
            android:textColor="@color/BlackBlue"
            android:fontFamily="@font/inter_bold"
            android:textSize="16dp"
            android:gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>