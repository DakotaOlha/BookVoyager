<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BookVoyager" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorSurface">@color/Background</item>

    </style>

    <style name="NavItemStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:itemBackground">@drawable/popup_menu_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="BrownButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_brown_button</item>
        <item name="android:textColor">@color/Background</item>
        <item name="android:padding">6dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="PlayButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/round_play_button</item>
        <item name="android:textColor">@color/Background</item>
    </style>
</resources>